# Copy this to `.env` (if your environment allows) or export these vars in your shell.

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=all-minilm
OLLAMA_CHAT_MODEL=opencoder

# Chroma (HTTP server)
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=rag_urls
# CHROMA_TENANT=default_tenant
# CHROMA_DATABASE=default_database

# Ingestion sources
# URLS="https://example.com https://example.com/docs"
URLS_FILE=urls.txt

# Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval
TOP_K=4

# Set to true to delete the collection before ingesting
RESET_COLLECTION=true


